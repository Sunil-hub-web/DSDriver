<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.in.dsdriver.SuccessOrderActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/hundred"
            android:layout_height="@dimen/hundred"
            android:src="@drawable/check_mark"
            android:layout_centerHorizontal="true">


        </ImageView>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Booking Is Over"
            android:textColor="@color/appcolor"
            android:layout_below="@id/image"
            android:textSize="@dimen/twenty_five"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/twenty"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Have successfully comoleted bookingfor the rider New bookingwillcomesoon"
            android:textColor="#706F73"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_below="@id/text"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your total bill is to be collect"
            android:textColor="#E10426"
            android:layout_below="@id/text1"
            android:textSize="@dimen/edittextsize"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fifteen"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="572.22"
            android:textColor="#070E37"
            android:layout_below="@id/text2"
            android:textSize="@dimen/thirty"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginTop="@dimen/twenty"
            android:layout_below="@id/text3"
            android:src="@drawable/logo">

        </ImageView>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank You"
            android:textColor="#ED1606"
            android:layout_below="@id/logo"
            android:textSize="@dimen/thirty"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fifteen"/>

    </RelativeLayout>



</RelativeLayout>