<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginRight="@dimen/fifteen"
        android:layout_marginBottom="@dimen/ten"
        app:cardCornerRadius="@dimen/five"
        app:cardElevation="@dimen/ten">

        <LinearLayout
            android:id="@+id/cardlin_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:background="@drawable/background_back">

          <!--  <View
                android:id="@+id/lin1"
                android:layout_width="@dimen/ten"
                android:layout_weight="0"
                android:layout_height="match_parent"
                android:background="#317BCA"
                android:orientation="horizontal">

            </View>-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lin1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/location">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/twenty"
                        android:layout_height="@dimen/twenty"
                        android:layout_marginStart="@dimen/ten"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_marginEnd="@dimen/ten"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_marginBottom="@dimen/ten"
                        android:src="@drawable/map_pin"></ImageView>

                    <TextView
                        android:id="@+id/text_Locality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/five"
                        android:layout_marginRight="@dimen/five"
                        android:layout_marginBottom="@dimen/five"
                        android:layout_toRightOf="@id/image"
                        android:text="Nayapalli,Bhubaneswar,Odisha"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize"></TextView>

                    <TextView
                        android:id="@+id/text_Landmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/image"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:layout_below="@+id/text_Locality"
                        android:text="Nayapalli,Bhubaneswar,Odisha"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize"></TextView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginLeft="@dimen/ten"
                    android:id="@+id/liner">

                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_Date"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                    <TextView
                        android:id="@+id/textReportTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Report Time"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_ReportTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:id="@+id/liner1">

                    <TextView
                        android:id="@+id/textBookingType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Booking Type"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_BookingType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                    <TextView
                        android:id="@+id/textNoofDays"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="No of Days"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_NoofDays"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:id="@+id/liner2">

                    <TextView
                        android:id="@+id/textShift"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Shift :"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_Shift"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                    <TextView
                        android:id="@+id/textDutyHours"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Duty Hours :"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_DutyHours"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:id="@+id/liner3">

                    <TextView
                        android:id="@+id/textReturnDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Return Date"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_ReturnDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                    <TextView
                        android:id="@+id/textToCity"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="To City"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_ToCity"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/lin2"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    >

                    <TextView
                        android:id="@+id/textDropLoc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Drop Locality"
                        android:textColor="@color/appcolor"
                        android:textSize="@dimen/twelve">

                    </TextView>

                    <TextView
                        android:id="@+id/text_DropLoc"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Locality Name, City Mumba"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/lin2"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    >

                    <TextView
                        android:id="@+id/textCarDetails"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Car Details"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_CarDetails"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Honda Amaze-Automatic, Medium"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/lin2"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    >
                    <TextView
                        android:id="@+id/textRemarks"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Remarks"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_Remarks"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Send good driver"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    >
                    <TextView
                        android:id="@+id/textCharges"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Charges"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_Charges"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Rs. 1800"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    >
                    <TextView
                        android:id="@+id/DeliveryType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Delivery Type"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text_DeliveryType"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Rs. 1800"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_acceptBooking"
                    android:layout_width="@dimen/hundred_sixty"
                    android:layout_height="@dimen/forty"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:background="@drawable/reportbutton_bg"
                    android:gravity="center"
                    android:layout_gravity="bottom|right"
                    android:layout_marginTop="@dimen/fifteen"
                    android:text="Accept"
                    android:layout_below="@+id/lin3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edittextsize">

                </TextView>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>