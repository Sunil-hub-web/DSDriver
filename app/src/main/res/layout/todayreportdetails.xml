<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_eighty"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginRight="@dimen/fifteen"
        android:layout_marginBottom="@dimen/ten"
        app:cardCornerRadius="@dimen/five"
        app:cardElevation="@dimen/ten">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_eighty">

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="@dimen/ten"
                android:layout_height="@dimen/hundred_eighty"
                android:background="#317BCA"
                android:orientation="horizontal">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/lin1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/location">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/thirty"
                        android:layout_height="@dimen/thirty"
                        android:layout_margin="@dimen/five"
                        android:src="@drawable/map_pin"></ImageView>

                    <TextView
                        android:id="@+id/text_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:layout_toRightOf="@id/image"
                        android:text="Nayapalli,Bhubaneswar,Odisha"
                        android:textColor="@color/black"
                        android:textSize="@dimen/edittextsize"></TextView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginLeft="@dimen/ten"
                    android:id="@+id/lin">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Report Time"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Duty Type"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="No of Days"
                        android:textSize="@dimen/twelve"
                        android:textColor="@color/appcolor">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/lin"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    >

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="12/01/2022"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                    <TextView
                        android:id="@+id/text_Time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="2:35 PM"
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                    <TextView
                        android:id="@+id/text_DutyType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>

                    <TextView
                        android:id="@+id/text_NoofDays"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/twelve"
                        android:textColor="#555557">

                    </TextView>


                </LinearLayout>

                <TextView
                    android:id="@+id/text_acceptBooking"
                    android:layout_width="@dimen/hundred_sixty"
                    android:layout_height="@dimen/forty"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:background="@drawable/reportbutton_bg"
                    android:gravity="center"
                    android:text="Accept"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edittextsize">

                </TextView>

            </RelativeLayout>





        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>