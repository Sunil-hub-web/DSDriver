<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".driver.fragment.WalletFragment">

    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/seven">

        <ImageView
            android:layout_width="@dimen/seventy"
            android:layout_height="@dimen/forty"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:scaleType="centerInside"
            android:src="@drawable/logo">

        </ImageView>

        <ImageView
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_centerVertical="true"
            android:src="@drawable/notification"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Transaction History"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/edittextsize">

        </TextView>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/image"
        android:background="#AEA8A8"
        android:elevation="@dimen/five" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/ten"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_fifty"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_marginBottom="@dimen/ten"
            app:cardCornerRadius="@dimen/fifteen"
            app:cardElevation="@dimen/ten">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/wallet_bg">

            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred_fifty">

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/ten"
                    android:text="Available Balance"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/ten"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/thirty"
                    android:textStyle="bold" />


                <!--   <TextView
                    android:id="@+id/text"
                    android:layout_width="@dimen/hundred_sixty"
                    android:layout_height="@dimen/forty"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:background="@drawable/walletcolor_bg"
                    android:gravity="center"
                    android:text="Recharge Now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edittextsize">

                </TextView>-->

                <ImageView
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/sixty"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:src="@drawable/driver_back_white">

                </ImageView>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:text="Transaction History"
            android:textColor="#515151"
            android:textSize="@dimen/edittextsize"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginRight="@dimen/five"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/text_InvoiceNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="Invoice No"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/text_Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/text_Amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/text_Action"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Action"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="@dimen/five"
            android:layout_marginRight="@dimen/five">


        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


</RelativeLayout>