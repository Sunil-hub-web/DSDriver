    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/seven"
            android:layout_marginLeft="@dimen/seven"
            android:layout_marginTop="@dimen/seven"
            android:layout_marginEnd="@dimen/seven"
            android:layout_marginRight="@dimen/seven"
            android:layout_marginBottom="@dimen/seven">

            <ImageView
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/forty"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:scaleType="centerInside"
                android:src="@drawable/logo">

            </ImageView>

            <ImageView
                android:layout_width="@dimen/twenty_five"
                android:layout_height="@dimen/twenty_five"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/notification">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Available Booking"
                android:textColor="@color/appcolor"
                android:textSize="@dimen/edittextsize">

            </TextView>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/image"
            android:background="#AEA8A8"
            android:elevation="@dimen/five" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten">


                <TextView
                    android:id="@+id/text_MyZoen"
                    android:layout_width="@dimen/hundred_sixty"
                    android:layout_height="@dimen/forty"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/upcoming_bg"
                    android:gravity="center"
                    android:text=" My Zone "
                    android:textColor="@color/white"
                    android:textSize="@dimen/edittextsize">

                </TextView>

                <TextView
                    android:id="@+id/text_MyCity"
                    android:layout_width="@dimen/hundred_sixty"
                    android:layout_height="@dimen/forty"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/fifteen"
                    android:background="@drawable/upcoming_bg1"
                    android:gravity="center"
                    android:text=" My City "
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/edittextsize">

                </TextView>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerReportDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginTop="@dimen/fifteen">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>



