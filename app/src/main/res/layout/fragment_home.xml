<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.in.dsdriver.fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten">

            <ImageView
                android:layout_width="@dimen/hundred_twenty"
                android:layout_height="@dimen/sixty"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:src="@drawable/logo">

            </ImageView>
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/image"
            android:layout_marginTop="@dimen/five"
            android:background="#AEA8A8"
            android:elevation="@dimen/five" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/twenty">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_hundred"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/deshbord_bg">

                            <ImageView
                                android:id="@+id/imageview"
                                android:layout_width="@dimen/eighty"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/work_request" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="Work Request"
                                android:textColor="@color/appcolor"
                                android:textSize="@dimen/edittextsize" />

                            <Button
                                android:id="@+id/btn_WorkDetails"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"></Button>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/deshbord_bg">

                            <ImageView
                                android:id="@+id/imageview2"
                                android:layout_width="@dimen/eighty"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/today_reporting_details" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="Today Reporting Details"
                                android:textColor="@color/appcolor"
                                android:textSize="@dimen/edittextsize"
                                android:gravity="center"/>

                            <Button
                                android:id="@+id/btn_TodayReportDetails"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"></Button>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_hundred"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/twenty">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/deshbord_bg">

                            <ImageView
                                android:id="@+id/imageview3"
                                android:layout_width="@dimen/eighty"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/my_completed_duties" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview3"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="My Completed Duties"
                                android:gravity="center"
                                android:textColor="@color/appcolor"
                                android:textSize="@dimen/edittextsize" />

                            <Button
                                android:id="@+id/btn_CompleteDuty"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"></Button>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/deshbord_bg">

                            <ImageView
                                android:id="@+id/imageview4"
                                android:layout_width="@dimen/eighty"
                                android:layout_height="@dimen/sixty"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/my_profile" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview4"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="My Profile"
                                android:textColor="@color/appcolor"
                                android:textSize="@dimen/edittextsize"
                                android:gravity="center"/>

                            <Button
                                android:id="@+id/btn_MyProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"></Button>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_hundred"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/twenty">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="@dimen/hundred_eighty"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="@dimen/hundred_eighty"
                            android:layout_height="match_parent"
                            android:background="@drawable/deshbord_bg">

                            <ImageView
                                android:id="@+id/imageview5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/home_wallet" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview5"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="Wallet"
                                android:gravity="center"
                                android:textColor="@color/appcolor"
                                android:textSize="@dimen/edittextsize" />

                            <Button
                                android:id="@+id/btn_Wallet"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"></Button>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>