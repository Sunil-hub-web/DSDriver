<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.in.dsdriver.fragment.ProfileFragment">


    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:text="@string/PROFILE"
                android:textColor="@color/appcolor"
                android:textSize="@dimen/twenty">

            </TextView>
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/image"
            android:layout_marginTop="@dimen/five"
            android:background="#AEA8A8"
            android:elevation="@dimen/five" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_top"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/nav_profile_image"
                android:layout_width="@dimen/hundred_twenty"
                android:layout_height="@dimen/hundred_twenty"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/ten"
                android:src="@drawable/profileimage"
                app:civ_border_color="@color/appcolor"
                app:civ_border_width="@dimen/ten" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginRight="@dimen/ten"
                android:text="Sunil kumar dash"
                android:textColor="@color/appcolor"
                android:textSize="@dimen/twenty">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:text="Contact No."
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/edittextsize">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:text="+91 1234567890"
                    android:textColor="#4D4D4E"
                    android:textSize="@dimen/twenty">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:text="Email ID."
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/edittextsize">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:text="sunil@gmail.com"
                    android:textColor="#4D4D4E"
                    android:textSize="@dimen/twenty">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:text="D.O.B"
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/edittextsize">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:text="25.10.2021"
                    android:textColor="#4D4D4E"
                    android:textSize="@dimen/twenty"></TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:text="Address."
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/edittextsize">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:text="Mumbai"
                    android:textColor="#4D4D4E"
                    android:textSize="@dimen/twenty">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:text="Driving Licence No."
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/edittextsize">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:text="HR-0619850034761"
                    android:textColor="#4D4D4E"
                    android:textSize="@dimen/twenty">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginRight="@dimen/ten"
                    android:text="Logout"
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/twenty_three">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>